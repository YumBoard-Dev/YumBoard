<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Instructions</th>
      <th>Ingredients</th>
      <th>Duration</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each recipes}}
    <tr>
      <td>{{recipe_id}}</td>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td>{{instructions}}</td>
      <td>{{ingredients}}</td>
      <td>{{duration.hours}} hours {{duration.minutes}} minutes</td>
      <td><img src="{{image_url}}" alt="Recipe Image" width="100"></td>
    </tr>
    {{/each}}
  </tbody>
</table>

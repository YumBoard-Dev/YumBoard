<div class="w-100 h-100 d-flex" style="padding: 20px; justify-content: center;">
    <form action="/register" method="post">
        <div class="container text-center">
            <div class="row p-2 justify-content-center">
                <h1>Register</h1>
            </div>
            <div class="row p-2 justify-content-center">
                {{> alert}}
            </div>
            <div class="row p-2 justify-content-center">
                <input class="form-control" style="width: 300px;" type="textbox" name="username" placeholder="Username">
            </div>
            <div class="row p-2 justify-content-center">
                <input class="form-control" style="width: 300px;" type="password" name="password" placeholder="Password" required>
            </div>
            <div class="row p-2 justify-content-center">
                <button class="form-control btn btn-primary" style="width: 100px;" type="submit">Register</button>
            </div>
            <div class="row p-2 justify-content-center">
                <p>Already have an account? <a href="/login">Login</a></p>
            </div>
        </div>
    </form>
</div>
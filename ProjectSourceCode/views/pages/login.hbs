<div style="margin: 20px; display: flex; justify-content: center;">
    <form action="/login" method="post">
        <div class="container text-center">
            <div class="row p-2">
                {{#if error}}
                <div class="alert alert-danger">{{error}}</div>
                {{/if}}
            </div>
            <div class="row p-2">
                <h1>Login</h1>
            </div>
            <div class="row p-2">
                <input class="form-control" style="width: 300px;" type="text" name="username" placeholder="Username" required>
            </div>
            <div class="row p-2">
                <input class="form-control" style="width: 300px;" type="password" name="password" placeholder="Password" required>
            </div>
            <div class="row p-2 justify-content-center">
                <button class="form-control btn btn-primary" style="width: 100px;" type="submit">Login</button>
            </div>
            <div class="row p-2 justify-content-center">
                <p>Don't have an account? <a href="/register">Register</a></p>
            </div>
    </form>
</div>
<div class="w-100 h-100 d-flex" style="padding: 20px; justify-content: center;">
    <form action="/login" method="post">
        <div class="container text-center">
            <div class="row p-2">
                <h1>Login</h1>
            </div>
            <div class="row p-2">
                {{> alert}}
            </div>
            <div class="row p-2">
                <input class="form-control" style="width: 300px;" type="text" name="username" placeholder="Username">
            </div>
            <div class="row p-2">
                <input class="form-control" style="width: 300px;" type="password" name="password" placeholder="Password">
            </div>
            <div class="row p-2 justify-content-center">
                <button class="form-control btn btn-primary" style="width: 100px;" type="submit">Login</button>
            </div>
            <div class="row p-2 justify-content-center">
                <p>Don't have an account? <a href="/register">Register</a></p>
            </div>
        </div>
    </form>
</div>